<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_phone_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fingerprint Authentication"
        android:padding="20dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
         />

    <ImageView
        android:id="@+id/image_finger_print"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_phone_auth"
        android:src="@mipmap/ic_finger_print_round"
        />

    <TextView
        android:id="@+id/text_inst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place your finger on the scanner"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_finger_print"
        android:padding="16dp"
        />


</RelativeLayout>